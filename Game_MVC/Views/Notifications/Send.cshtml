@using Game_MVC.Models.Notification
@model CreateNotificationViewModel
@{
    ViewData["Title"] = "Send Notification";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-custom">
                <div class="card-body">
                    <h2 class="card-title mb-4">Send Notification</h2>

                    <form asp-action="Send" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Message" class="form-label">Message</label>
                            <textarea asp-for="Message" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                            <div class="form-text">
                                Leave UserIds empty to send to all users.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UserIds" class="form-label">User IDs (Optional)</label>
                            <textarea asp-for="UserIds" class="form-control" rows="2"
                                      placeholder="Enter comma-separated user IDs"></textarea>
                            <span asp-validation-for="UserIds" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i>Send
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}