@model int

<a asp-controller="Notifications" asp-action="Index" class="notification-btn position-relative">
    <i class="fas fa-bell"></i>
    @if (Model > 0)
    {
        <span class="notification-badge badge rounded-pill bg-danger position-absolute">
            @(Model > 99 ? "•" : Model.ToString())
        </span>
    }
</a>